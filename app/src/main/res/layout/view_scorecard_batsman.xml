<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:id="@+id/llSCBatsmanView"
	android:background="@drawable/header_highlighter">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="6"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tvSCBatsmanName"
				style="@style/TextViewStyle.Bold"
				android:text="@string/playerName"/>

			<TextView
				android:id="@+id/tvSCBatsmanOutDetails"
				style="@style/TextViewStyle"/>

		</LinearLayout>

		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:id="@+id/tvSCBatsmanRuns"
			style="@style/TextViewStyle"
			android:layout_gravity="center_vertical"
			android:text="@string/headerRuns"/>

		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:id="@+id/tvSCBatsmanBalls"
			style="@style/TextViewStyle"
			android:layout_gravity="center_vertical"
			android:text="@string/headerBalls"/>

		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:id="@+id/tvSCBatsmanFours"
			style="@style/TextViewStyle"
			android:layout_gravity="center_vertical"
			android:text="@string/headerFours"/>

		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:id="@+id/tvSCBatsmanSixes"
			style="@style/TextViewStyle"
			android:layout_gravity="center_vertical"
			android:text="@string/headerSixes"/>

		<TextView
			android:layout_width="45dp"
			android:id="@+id/tvSCBatsmanSR"
			style="@style/TextViewStyle"
			android:layout_gravity="center_vertical"
			android:text="@string/headerStrikeRate"/>

	</LinearLayout>

	<!-- Separator -->
	<View style="@style/LineSeparator"/>

</LinearLayout>